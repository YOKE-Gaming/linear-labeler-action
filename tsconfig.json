{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "ES2019",
      "lib": ["ES2019"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  